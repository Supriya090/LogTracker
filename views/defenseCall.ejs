<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
    <style>
      option{
        border-color: royalblue;
        border-width: 2px;

      }
    </style>
  </head>
  <body style="background-color: #1f3750">
    <%- include('partials/adminHeader') %>
    <div class="container">
      <h3>Defense Call</h3>
      <div class="card">
        <form
          action=""
          class="login-form create-team"
          method="post"
          autocomplete="off"
        >
          <div class="form-group options">
            <div>
              <label for="term"  style="min-width:101px;">Defense Type</label>
              <p>:</p>
              <select name="terms" id="terms" style="min-width:240px;">
                <option value="1">Mid-Term Project Defense</option>
                <option value="2">Final Project Defense</option>
              </select>
            </div>
          </div>

          <div class="form-group options">
            <div>
              <label for="faculty">Faculty</label>
              <p>:</p>
              <select name="faculty" id="faculty">
                <% faculty.forEach(element => { %>
                  <option value="<%= element.name %> "><%= element.name%></option>
                <% }) %>
              </select>
            </div>
          </div>

          <div class="form-group options">
            <div>
              <label for="sems">Semester</label>
              <p>:</p>
              <select name="sems" id="sems">
                <option value="1">8th</option>
                <option value="2">7th</option>
                <option value="3">6th</option>
                <option value="4">5th</option>
                <option value="5">4th</option>
                <option value="6">3rd</option>
                <option value="7">2nd</option>
                <option value="8">1st</option>
              </select>
            </div>
          </div>

          <div class="form-group options">
            <div>
              <label for="subject">Subject</label>
              <p>:</p>
              <select name="subjects" id="subjects" style="min-width:200px;">
                <% faculty.forEach(faculty => { %>
                  <% faculty.courses.forEach(course => { %>
                   <% course.subjects.forEach(subject => { %>
                    <option value="<%= subject %> "><%= subject%></option>
                   <% }) %>
                  <% }) %>
 
                <% }) %>
              </select>
            </div>
          </div>

          <div class=" form-group dateAndTime">
            <label for="name" style="min-width:150px;">Date and Time &ensp;: </label>
            <input
              type="date"
              class="form-control"
              id="defenseDate"
              name="defenseDate"
              style="min-width:170px; margin-right: 20px;"
              required
            >

            <input
            type="time"
            class="form-control"
            id="defenseTime"
            name="defenseTime"
            style="min-width:137px;"
            value="12:30"
            required
            >
          </div>

          <button type="submit" class="btn btn-primary logout-btn">
            Confirm
          </button>
        </form>
      </div>
    </div>
    <script src="/javascripts/chooseUser.js"></script>
  </body>
</html>
