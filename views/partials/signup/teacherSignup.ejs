<div class="view hide hidden" id="teacher">
    <div class="card-body">
        <div class="login-body-top">
            <h5 class="card-title">TEACHER SIGNUP</h5>
            <span>
                <!-- <i class="fa fa-angle-left"></i> -->
                <img src="/assets/teacher.png" />
                <!-- <i class="fa fa-angle-right"></i> -->
            </span>
        </div>
        <form action="/auth/signup" class="login-form" method="post">
            <div class="form-group">
                <label for="email">EMAIL</label>
                <input type="email" class="form-control" id="emailTeacher" name="email" pattern="^[A-Za-z0-9]+(.|_)+[A-Za-z0-9]+@+ioe.edu.np$" required>
            </div>
            <div class="form-group">
                <label for="username">USERNAME </label>
                <input type="text" class="form-control" id="usernameTeacher" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">PASSWORD</label>
                <input type="password" class="form-control" id="passwordTeacher" name="password" minlength=8 required>
            </div>
            <div class="form-group">
                <input type="hidden" id="admin" value="teacher" name ="userstatus">
            </div>
            <div class="button-div">
                <input class="btn btn-outline-primary login-btn" type="submit" value="Signup">
            </div>
            <%- include('../messages') %>
        </form>
    </div>
</div>